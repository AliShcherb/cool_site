html
    title Admin
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
    body
        div(class='container text-center my-5')
            h3(class='my-5 w-25 mx-auto badge' style="background-color: #6b0a8b; font-size: 2.5rem") Заявки
            br
            a(href='/add' class='mx-auto badge' style="background-color: #6b0a8b; font-size: 1.25rem") Додати книгу
            table(class='table my-4')
                thead(class='thead' style="background-color: #6b0a8b")
                    tr(class="text-white text-center")
                        th id
                        th Ім'я
                        th Email
                        th Текст
                        th Статус
                tbody
                    each user in users
                        tr(class="text-center")
                            th(class="align-middle")=user['_id']
                            th(class="align-middle")=user['name']
                            th(class="align-middle")=user['email']
                            th(class="align-middle")=user['comment']
                            th(class="align-middle")
                                if (user['confirmed']===true)
                                    span(class="bg-success p-1 text-white") Підтверджено
                                else
                                    span(class="bg-danger p-1 text-white") Не підтверджено
