html
    title Applications
    link(rel="icon" href="./images/binocular.png")
    link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous")
    body
        div(class='container text-center my-5')
            h2(class='my-5') Developed by Vladyslav Zhulkevskyi
            a(class='btn btn-primary btn-block my-5 w-25 mx-auto' href='/') To main Page
            h3(class='my-5 w-25 mx-auto') Applications
            table(class='table table-bordered table-striped my-4')
                thead(class='thead-dark')
                    tr
                        th Id
                        th Last name
                        th Email
                        th Comment
                        th Confirmed
                tbody
                    each user in users
                        tr
                            th(class="align-middle")=user['_id']
                            th(class="align-middle")=user['name']
                            th(class="align-middle")=user['email']
                            th(class="align-middle")=user['comment']
                            th(class="align-middle")
                                if (user['confirmed']===true)
                                    span(class="bg-success p-1 text-white") Verified
                                else
                                    span(class="bg-danger p-1 text-white") Unverified
