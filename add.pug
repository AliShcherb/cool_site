html
    title Admin page
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
    body
        div(class='container text-center')
            h3(class='my-5 badge' style="background-color: #6b0a8b; font-size : 2.5rem") Add book
            br
            a(href='/applications' class='mx-auto badge' style="background-color: #6b0a8b; font-size: 1.25rem") Applications
            form(action="/addbook" class="mx-auto " method="POST")
                div(class="w-50 mx-auto")
                    br
                    p(class='badge' style="background-color: #6b0a8b; font-size : 1.2rem") Name
                    input(name="name" class="form-control")
                div(class="w-50 mx-auto")
                    br
                    p(class='badge' style="background-color: #6b0a8b; font-size : 1.2rem") Author
                    input(type="text" name="author" class="form-control")
                div(class="w-50 mx-auto")
                    br
                    p(class='badge' style="background-color: #6b0a8b; font-size : 1.2rem") Year
                    input(type="text" name="year" class="form-control")
                div(class="w-50 mx-auto")
                    br
                    p(class='badge' style="background-color: #6b0a8b; font-size : 1.2rem") Description
                    input(type="text" name="description" class="form-control")
                button(type="submit" class="btn my-5 mx-3 text-white" style="background-color: #6b0a8b") Submit