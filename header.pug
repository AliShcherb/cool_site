
div(class="header d-flex flex-row text-white " style=`background-color: ${info.config.color}`)
    div(class="ml-3 mr-1 my-auto")
        a(class="h2 hover" href=`/?lang=${info.lang}`)=info.config.domain
    div(class="mx-1 my-auto")
        h2 |
    div(class="mx-2 my-auto")
        each element, index in info.i8n[info.lang].header
            a(class=`h4 mx-2 header-link ${info.url_path === "/" + index ? "" : "text-white-50"} hover` href=`/${index}?lang=${info.lang}`) #{element}
    div(style="width: 650px")
    div(class="my-auto")
        div(class="mx-3 float-left")
            a(class="h3 mx-2 header-link hover" href=`${info.url_path}?lang=en`) ENG
            a(class="h3 mx-2 header-link hover" href=`${info.url_path}?lang=uk`) UKR